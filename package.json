{
  "name": "phosphor-webcomponent-build",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna exec -- rm -rf dist",
    "build": "yarn clean && yarn build:dev && yarn build:prod",
    "build:dev": "lerna exec -- node ../../scripts/build/build.js",
    "build:prod": "lerna exec -- NODE_ENV=production node ../../scripts/build/build.js",
    "examples": "webpack-dev-server --config ./examples/webpack.config.ts",
    "prettier": "prettier --list-different --write packages/**/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LukeSheard/phosphor-webcomponent.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LukeSheard/phosphor-webcomponent/issues"
  },
  "homepage": "https://github.com/LukeSheard/phosphor-webcomponent#readme",
  "devDependencies": {
    "@types/node": "^8.0.54",
    "lerna": "^2.5.1",
    "lodash": "^4.17.4",
    "rollup": "^0.52.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript2": "^0.8.4",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "prettier": "^1.9.1",
    "rollup-plugin-uglify": "^2.0.1"
  }
