{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@phosphorwc/dock-layout": [
        "packages/dock-layout/src"
      ],
      "@phosphorwc/shared": [
        "packages/shared/src"
      ],
      "@phosphorwc/tab-layout": [
        "packages/tab-layout/src"
      ]
    },
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "include": [
    "packages/"
  ]
}