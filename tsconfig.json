{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@phosphorwc/*": ["./*/src"]
    },
    "target": "es5",
    "module": "commonjs",
    "checkJs": true,
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./packages",
    "./scripts"
  ]
}