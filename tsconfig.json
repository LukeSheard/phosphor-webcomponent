{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@phosphorwc/*": ["./*"],
      "@phosphorwc/widget": ["./phosphor-widget/src"]
    },
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "include": [
    "./packages",
    "./scripts"
  ]
}